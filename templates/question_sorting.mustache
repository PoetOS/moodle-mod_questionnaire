{{!
    @template mod_questionnaire/question_sorting

    Template which defines a text type question survey display.

    Classes required for JS:
    * /mod/questionnaire/module.js

    Data attributes required for JS:
    * none

    Context variables required for this template:

    Example context (json):
    {
        "qelements": {
            "sortinglist": {
                "index": "1",
                "text": "30",
                "qid": "455"
            },
            "sortingdirection": "vertical"
        }
    }
    }}
<!-- Begin HTML generated from question_sorting template. -->
<div class="qn-sorting-container">
    {{#qelements}}
        {{^isresponse}}<div class="qn-sortingmsg">{{#str}}sortingstrictformatting, mod_questionnaire{{/str}}</div>{{/isresponse}}
        <ol class="qn-sorting-list {{{sortingdirection}}}" data-qid="{{qid}}" id="sorting-list-{{qid}}">
            {{#sortinglist}}
                <li class="draggable qn-sorting-list__items" data-qid="{{qid}}" {{^isresponse}}draggable="true" tabindex="0"{{/isresponse}}>
                    <div class="qn-sorting-list__content" title="{{title}}">
                        <div>{{{text}}}</div>
                        <input name="{{qid}}-{{index}}" type="hidden" value="{{{index}}}" />
                    </div>
                </li>
            {{/sortinglist}}
        </ol>
    {{/qelements}}
</div>
<!-- End HTML generated from question_sorting template. -->
